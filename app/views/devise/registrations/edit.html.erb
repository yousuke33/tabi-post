<h2><%=current_user.owner.name if current_user.owner.present? %>
    <%=current_user.guest.name if current_user.guest.present? %>
　   編集
</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class='container'>
    <div class='row'>
      <div class='col-md-6 col-md-offset-3'>
        <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, class:'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :パスワード %> <i>(変更しない場合は空白)</i><br />
          <%= f.password_field :password, autocomplete: "off", class:'form-control' %>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %>文字以上</em>
          <% end %>
        </div>

        <div class="field">
          <%= f.label :パスワード再入力 %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="field">
          <%= f.label :現在のパスワード %> <i>アカウント情報の変更には現在のパスワードの入力が必要です。</i><br />
          <%= f.password_field :current_password, autocomplete: "off", class:'form-control' %>
        </div>

        <div class="actions">
          <%= f.submit "更新", class:'btn btn-md' %>
        </div>
      <% end %>

      <h3>アカウントの削除</h3>

      <p><%= button_to "削除しますか? ", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:'btn btn-md btn-danger' %></p>

      <%= link_to "戻る", :back %>
    </div>
  </div>
</div>