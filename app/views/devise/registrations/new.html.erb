<div class= 'container'>
  
  <% if params[:role] == 'guest' %>
    <h2>ゲスト登録</h2>
  <% elsif params[:role] == 'owner' %>
    <h2>オーナー登録</h2>
  <% end %>

  <div class= 'row'>
    <div class='col-md-6 col-md-offset-3'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :お名前 %><br/>
        <input type='text' name="name" placeholder="お名前" class='form-control' autofocus>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class:'form-control'%>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class:'form-control'%>
      </div>

      <div class="field">
        <%= f.label :パスワードを再入力 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワード",  class:'form-control'%>
      </div>

      <div class="actions">
        <%= f.hidden_field :role, value: params[:role] %> 
        <%= f.submit "登録", class:'btn btn-md' %>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

