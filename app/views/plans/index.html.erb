<div id="full-width-div" class="lightgreen-bg">

<h1>検索ページ</h1>

<% form_tag(url_for(:action => 'index'), :remote => true, :id => "result_form") do %>
  <%= text_field_tag :greeting %>
  <%= submit_tag "Show!" %>
<% end %>

<div id="result"></div>

<div class="container">
  <div class="row">
  	<div class="col-md-6">
  		<h2>日時を選択</h2>
  		<div class="form-group">
		  <label for="usr">年:</label>
		  <input type="text" class="form-control" id="usr">
		</div>
		<div class="form-group">
		  <label for="pwd">月:</label>
		  <input type="password" class="form-control" id="pwd">
		</div>
		<div class="form-group">
		  <label for="pwd">日:</label>
		  <input type="password" class="form-control" id="pwd">
		</div>
  		
  	</div>
  	<div class="col-md-6">
  		<h2>目的地を選択</h2>
  		<ul>
  			<li>地方</li>
  			<li>県</li>
  			<li>市町村等</li>
  		</ul>	
  	</div>
  </div>
  <div class="row">
      <% @plans.each do |plan| %>
        <div class="col-sm-4 border-around">
          <%= render partial: "item", locals:{plan: plan} %>
        </div>
      <% end %>
  </div>
</div>

 <a href="#" id='background'>Paint it red</a>

 </div>
