<div class="container">
	<h2>新しくチャットルームを作成する</h2>

	<div class= 'row'>
    	<div class='col-md-6 col-md-offset-3'>
			<%= form_for(@chat_room) do |f| %>
				<div class="form-group">
					<%= f.label :title %>
					<%= f.text_field :title, autofocus: true, placeholder: "タイトル", class:"form-control" %>
				</div>
				<%= f.submit "作成", class: "btn btn-primary btn-md" %>
			<% end %>
		</div>
	</div>
</div>